<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="@color/radius_textview_color" />


    <!-- 设置四个圆角的半径 -->
    <corners
        android:bottomLeftRadius="36px"
        android:bottomRightRadius="36px"
        android:topLeftRadius="36px"
        android:topRightRadius="36px" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp"
        android:top="5dp" />

</shape>