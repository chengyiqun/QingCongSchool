<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_sub_comment_rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <io.github.rockerhieu.emojicon.EmojiconEditText
        android:id="@+id/emg_editText"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="bottom"
        android:hint="期待您的精彩评论"
        android:inputType="textPersonName"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        emojicon:emojiconSize="26sp"
        tools:ignore="LabelFor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_chose_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"

            android:tint="@color/colorBorder"
            app:srcCompat="@drawable/ic_emoji_people_light_activated"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/imageButton_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/emojicons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>